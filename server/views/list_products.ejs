    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="styles.css">
    <!-- Font awesome -->
     <style>
      @import url('https://fonts.googleapis.com/css2?family=Fira+Sans:wght@300;400;500;600;700;800;900&family=Poppins:wght@200;300;400;500;600;700;800;900&display=swap');

:root{
    --blackRussian: #1f1f26;
    --greyWhite: #f9f9f9;
    --pacificBlue: #1ca9c9;
}
*{
    box-sizing: border-box;
    padding: 0;
    margin: 0;
    font-family: 'Poppins', sans-serif;
}
body{
    line-height: 1.6;
}


/* Utility Classes  and stylings */

.container{
    padding: 5rem 1rem;
    border:0.5px solid black;
    height:fit-content;
   
}


.featured-item
{
    position: relative;

}
.text{
    padding: 10px 0;
    font-size: 15px;
    font-weight: 400;
    opacity: 0.7;
}
.btn{
    text-transform: uppercase;
    background: var(--blackRussian);
    color: #fff;
    border: 1.5px solid var(--blackRussian);
    font-size:2.5vmin;
    padding: 5px 16px;
    cursor: pointer;
    transition: all 0.5s ease-in-out;
    max-width: 150px;
}
.btn:hover{
    color: var(--pacificBlue);
}
.title{
    margin: 30px 0;
}
.title h4{
    text-transform: uppercase;
}
.title h2{
    text-transform: capitalize;
    font-size: 28px;
    font-weight: 600;
    font-family: 'Fira Sans', sans-serif;
    padding: 5px 0;
}
.title h3{
    text-transform: capitalize;
    font-size: 20px;
    font-weight: 500;
    font-family: 'Fira Sans', sans-serif;
    padding: 5px 0;
}
/*********/


/* featured */
.container
{
    padding: 15px 25px;
}

.featured-item
{
    box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
    padding:20px;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    border-radius:15px;
}

@media screen  and (max-width : 400px){
    .featured-item
    {
      padding:20px 20px 0 20px;
      display:flex;
      flex-direction: column;
    }
}

     </style> 
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA==" crossorigin="anonymous" />
