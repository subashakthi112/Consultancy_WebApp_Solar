  <body>
    <!-- featured product -->
     <div class = "container">
        <% products.forEach(product =>{ %>
       <div class = "featured-item"> 
            <h4><%=product.product_name%></h4>
            <h4><%=product.sub_category1%></h4>
            <a href = "/deleteproduct/<%=product._id%>" class="btn" style = "text-decoration: none;"><i class = "fas fa-trash"></i></a>
            <br>
        </div>  
        <br> 
        <%})%>
    </div>


   
    <!-- end of featured product -->
  </body>
</html>